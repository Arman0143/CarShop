@model IList<CarShop.Models.Contact>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        padding: 8px;
        font-family: 'Font Awesome 5 Brands';
        font-size: 18px;
        background: bisque;
    }

    td {
        padding: 8px;
        font-family: 'Font Awesome 5 Pro';
        background: #8080801c;
    }

    h2 {
        font-size: 48px;
        margin-left: 170px;
    }
</style>


<h2>Contact List</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12 table-responsive">
            <table class="table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Number</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.name</td>
                                <td>@item.number</td>
                                <td>@item.email</td>
                                @if (item.status == true)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>In Active</td>
                                }
                                <td><a href="/Home/Contact?id=@item.id" class="btn btn-warning">Edit</a> &nbsp; @Html.ActionLink("Delete", "DeleteContact", new { id = item.id }, new { @class = "btn btn-danger" })</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
